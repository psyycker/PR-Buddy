{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "PR-Buddy",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "scope": [
          "**"
        ]
      },
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.psyycker.prbuddy",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 800,
        "resizable": false,
        "title": "menubar",
        "width": 500,
        "visible": false,
        "hiddenTitle": true,
        "decorations": false,
        "focus": false,
        "transparent": true
      },
      {
        "label": "settings",
        "url": "/settings",
        "title": "Settings",
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "width": 800,
        "visible": false,
        "hiddenTitle": false,
        "decorations": true,
        "focus": false,
        "transparent": false
      },
      {
        "label": "wizard",
        "url": "/wizard",
        "title": "Welcome to PR-Buddy",
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "width": 800,
        "visible": false,
        "hiddenTitle": false,
        "decorations": true,
        "focus": false,
        "transparent": false
      }
    ]
  }
}
